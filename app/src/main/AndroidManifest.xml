<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.rijul.knockcode"
    android:versionCode="7"
    android:versionName="1.0.6" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name="me.rijul.knockcode.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/MyMaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.rijul.knockcode.ChangeKnockCodeActivity"
            android:label="@string/app_name"
            android:theme="@style/MyMaterialTheme"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name="me.rijul.knockcode.AboutActivity"
            android:label="@string/pref_about_title"
            android:theme="@style/MyMaterialTheme"
            android:parentActivityName=".MainActivity">
        </activity>
        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposedminversion"
            android:value="66" />
        <meta-data
            android:name="xposeddescription"
            android:value="Knock code for all 5.1.x devices" />
    </application>

</manifest>